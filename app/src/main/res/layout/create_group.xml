<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECFBFF"

        tools:context=".CreateGroupFragment">

    <TextView
        android:id="@+id/collective_trek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CollectiveTrek"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/allerta"
        android:textColor="#00AAD8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="45dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="186dp" />

    <TextView
        android:id="@+id/create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/collective_trek"/>

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="10dp"
        android:padding="7dp"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        android:text="Group Name: "
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/create_group"/>

    <EditText
        android:id="@+id/group_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/button"
        android:hint="Enter here"
        android:paddingLeft="12dp"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/group_name"
        app:layout_constraintStart_toStartOf="@id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/create_group" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:padding="7dp"
        android:text="Destination: "
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/group_name"/>

    <EditText
        android:id="@+id/destination_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:background="@drawable/button"
        android:hint="Enter here"
        android:paddingLeft="12dp"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/destination"
        app:layout_constraintStart_toStartOf="@id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/group_name_edit_text" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:padding="7dp"
        android:text="Date: "
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/destination"/>

    <EditText
        android:id="@+id/date_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:background="@drawable/button"
        android:hint="Enter here"
        android:paddingLeft="12dp"
        android:fontFamily="@font/allerta"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/date"
        app:layout_constraintStart_toStartOf="@id/center_guideline"
        app:layout_constraintTop_toBottomOf="@+id/destination_edit_text" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="45dp"
        android:text="CREATE"
        android:textSize="20dp"
        android:backgroundTint="#00AAD8"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:text="BACK"
        android:textSize="20dp"
        android:backgroundTint="#00AAD8"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/create_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>